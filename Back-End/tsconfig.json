{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
  "types": ["node"],
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ]
  },
  "include": ["src/**/*.ts", "prisma/seed/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
