{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install backend deps",
			"type": "shell",
			"command": "npm ci",
			"isBackground": false,
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "build-backend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build-and-test-backend",
			"type": "shell",
			"command": "npm run build ; npm test",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "backend:build",
			"type": "shell",
			"command": "npm run build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "backend:build+test",
			"type": "shell",
			"command": "npm run build ; npm test",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "create tasks.json: build+test",
			"type": "shell",
			"command": "echo tasks",
			"isBackground": false,
			"group": "build"
		}
	]
}