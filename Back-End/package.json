{
  "name": "epic-pizza-pasta-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:prod": "npm run prisma:generate && tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "prestart:prod": "npm run prisma:generate",
    "start:prod": "node dist/main.js",
  "start:render": "npm run prisma:deploy && node -e \"if (process.env.SEED_ON_START !== 'false') { require('child_process').execSync('npm run seed:menu', { stdio: 'inherit' }); }\" && node dist/main.js",
    "start:dev": "tsx watch src/main.ts",
    "start:debug": "node --inspect dist/main.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "seed:menu": "tsx prisma/seed/menu.seed.ts",
    "db:create:utf8": "tsx scripts/create-utf8-db.ts",
    "prepare": "husky install || true",
    "test:all": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/test-all.ps1",
    "test:sheets": "node ./scripts/test-sheets.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@prisma/client": "^5.18.0",
    "argon2": "^0.41.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "express-rate-limit": "^7.4.0",
    "googleapis": "^140.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.19.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
